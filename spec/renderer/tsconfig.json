{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // mark.js
    "sourceMap": true,
    "types": [
      "jest",
      "webpack-env",
      "vue",
      "vuetify"
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/vue/types",
      "../../node_modules/vuetify/types"
    ],
    "paths": {
      "@/*": [ "../../src/renderer/*" ],
      "?/*": [ "../../spec/renderer/*" ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "include": [ "./**/*", "../../src/renderer/**/*" ]
}
