{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true, // mark.js
    "types": [
      "webpack-env",
      "vuetify"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuetify/types"
    ],
    "paths": {
      "@/*": [ "src/renderer/*" ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "include": [
    "src/renderer/**/*.js",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.vue"
  ]
}
