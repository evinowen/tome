{
  "name": "tome",
  "version": "0.8.0",
  "description": "git integrated cross-platform markdown editor",
  "author": "Evin Owen <git@evinowen.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/evinowen/tome"
  },
  "scripts": {
    "build-electron": "electron-builder",
    "build-main": "tsc -p src/main/tsconfig.json",
    "build-renderer": "vite --config src/renderer/vite.config.js build",
    "lint-main": "eslint --ext .js,.ts spec/main src/main",
    "lint-main-print-config": "eslint --print-config src/main/main.ts",
    "lint-renderer": "eslint --ext .js,.ts,.vue spec/renderer src/renderer",
    "lint-renderer-print-config": "eslint --print-config src/renderer/main.ts",
    "pack-electron": "electron-builder --dir",
    "rebuild-electron": "electron-rebuild",
    "serve-main": "cross-env-shell NODE_ENV=development electron dist/main/main.js",
    "serve-main-framed": "cross-env-shell NODE_ENV=development FRAME_WINDOW=1 electron dist/main/main.js",
    "serve-renderer": "vite --config src/renderer/vite.config.js",
    "test-main": "jest --config spec/main/jest.config.js",
    "test-renderer": "vitest run --config spec/renderer/vitest.config.js --dir spec/renderer",
    "test-renderer-watch": "vitest watch --config spec/renderer/vitest.config.js --dir spec/renderer"
  },
  "main": "main.js",
  "dependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.23.5",
    "@codemirror/commands": "^6.3.0",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-markdown": "^6.2.2",
    "@codemirror/language": "^6.9.2",
    "@codemirror/search": "^6.5.4",
    "@codemirror/state": "^6.3.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.21.4",
    "@electron/notarize": "^1.2.1",
    "@electron/rebuild": "^3.2.9",
    "@fontsource/montserrat": "^4.5.13",
    "@mdi/font": "^7.0.96",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vue/compiler-sfc": "^3.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "chokidar": "^3.5.3",
    "cli-truncate": "^3.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1",
    "electron-log": "^5.0.1",
    "lodash": "^4.17.21",
    "luxon": "^3.0.4",
    "mark.js": "^8.11.1",
    "marked": "^4.1.1",
    "mime-types": "^2.1.35",
    "mustache": "^4.2.0",
    "node-forge": "^1.3.1",
    "nodegit": "^0.28.0-alpha.21",
    "resize-observer-polyfill": "^1.5.1",
    "sass": "^1.69.0",
    "tmp": "^0.2.1",
    "tmp-promise": "^3.0.3",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0",
    "vite": "^4.4.12",
    "vite-plugin-vuetify": "^1.0.2",
    "vue": "^3.3.4",
    "vuetify": "^3.4.3",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@stylistic/eslint-plugin": "^1.5.4",
    "@types/lodash": "^4.14.186",
    "@types/luxon": "^3.0.1",
    "@types/mark.js": "^8.11.8",
    "@types/marked": "^4.0.7",
    "@types/mime-types": "^2.1.1",
    "@types/mustache": "^4.2.1",
    "@types/node": "^20.8.9",
    "@types/node-forge": "^1.3.0",
    "@types/nodegit": "^0.27.10",
    "@types/util.promisify": "^1.0.4",
    "@types/uuid": "^8.3.4",
    "@types/vue-splitpane": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-vue": "^9.20.1",
    "happy-dom": "^12.10.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "vitest": "^0.34.6"
  },
  "build": {
    "appId": "com.evinowen.tome",
    "productName": "Tome",
    "artifactName": "Tome.Setup.${version}.${ext}",
    "npmRebuild": false,
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "files": [
      "!node_modules/nodegit/vendor",
      "dist/main",
      {
        "from": "dist/renderer",
        "to": "",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist/app"
    },
    "linux": {
      "icon": "build/icon.256.png",
      "target": "deb"
    },
    "mac": {
      "asarUnpack": "**/*.node",
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.plist",
      "entitlementsInherit": "build/entitlements.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "icon": "build/icon.512.png",
      "target": "dmg"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "NSIS"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "./build/notarize.js"
  },
  "license": "MIT"
}
