{
  "name": "tome",
  "version": "0.7.6",
  "description": "git integrated cross-platform markdown editor",
  "author": "Evin Owen <git@evinowen.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/evinowen/tome"
  },
  "scripts": {
    "build-electron": "./node_modules/.bin/electron-builder",
    "build-main": "./node_modules/.bin/cross-env-shell \"./node_modules/.bin/tsc -p src/main/tsconfig.json\"",
    "build-renderer": "./node_modules/.bin/vite build",
    "lint-main": "./node_modules/.bin/eslint --ext .ts spec/main src/main",
    "lint-main-print-config": "./node_modules/.bin/eslint --print-config src/main/main.ts",
    "lint-renderer": "./node_modules/.bin/eslint --ext .vue,.ts spec/renderer src/renderer",
    "lint-renderer-print-config": "./node_modules/.bin/eslint --print-config src/renderer/main.ts",
    "pack-electron": "./node_modules/.bin/electron-builder --dir",
    "rebuild-electron": "./node_modules/.bin/electron-rebuild",
    "serve-main": "./node_modules/.bin/cross-env-shell NODE_ENV=development \"./node_modules/.bin/electron dist/main/main.js\"",
    "serve-main-framed": "./node_modules/.bin/cross-env-shell NODE_ENV=development FRAME_WINDOW=1 \"./node_modules/.bin/electron dist/main/main.js\"",
    "serve-renderer": "./node_modules/.bin/vite",
    "test-main": "./node_modules/.bin/jest --config=spec/main/jest.config.js",
    "test-renderer": "./node_modules/.bin/jest --config=spec/renderer/jest.config.js"
  },
  "main": "main.js",
  "dependencies": {
    "@fontsource/montserrat": "^4.5.13",
    "@mdi/font": "^7.0.96",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/compiler-sfc": "^3.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.5.1",
    "chokidar": "^3.5.3",
    "cli-truncate": "^3.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "electron-log": "^4.4.8",
    "lodash": "^4.17.21",
    "luxon": "^3.0.4",
    "mark.js": "^8.11.1",
    "marked": "^4.1.1",
    "mime-types": "^2.1.35",
    "mustache": "^4.2.0",
    "node-forge": "^1.3.1",
    "nodegit": "^0.28.0-alpha.18",
    "resize-observer-polyfill": "^1.5.1",
    "tmp": "^0.2.1",
    "tmp-promise": "^3.0.3",
    "uuid": "^9.0.0",
    "vite": "^4.4.11",
    "vite-jest": "^0.1.4",
    "vue": "^3.3.4",
    "vue-class-component": "^7.2.6",
    "vue-codemirror": "^4.0.6",
    "vue-facing-decorator": "^3.0.3",
    "vue-property-decorator": "^9.1.2",
    "vue-shortkey": "^3.1.7",
    "vue-splitpane": "^1.0.6",
    "vuetify": "^3.3.21",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@types/luxon": "^3.0.1",
    "@types/mark.js": "^8.11.8",
    "@types/marked": "^4.0.7",
    "@types/mime-types": "^2.1.1",
    "@types/mustache": "^4.2.1",
    "@types/node": "^18.8.4",
    "@types/node-forge": "^1.3.0",
    "@types/nodegit": "^0.27.10",
    "@types/util.promisify": "^1.0.4",
    "@types/uuid": "^8.3.4",
    "@types/vue-splitpane": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^1.3.0",
    "@vue/vue2-jest": "^27.0.0",
    "electron": "^18.3.15",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.2.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-unicorn": "^44.0.2",
    "eslint-plugin-vue": "^9.6.0",
    "eslint-plugin-vuetify": "^2.0.5",
    "jest": "^27.5.1",
    "jest-junit": "^14.0.1",
    "prettier": "^2.7.1",
    "sass": "^1.69.0",
    "ts-jest": "^27.1.5",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "build": {
    "appId": "com.evinowen.tome",
    "productName": "Tome",
    "artifactName": "Tome.Setup.${version}.${ext}",
    "npmRebuild": false,
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "files": [
      "!node_modules/nodegit/vendor",
      "dist/main",
      {
        "from": "dist/renderer",
        "to": "",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist/app"
    },
    "linux": {
      "icon": "build/icon.256.png",
      "target": "deb"
    },
    "mac": {
      "asarUnpack": "**/*.node",
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.plist",
      "entitlementsInherit": "build/entitlements.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "icon": "build/icon.512.png",
      "target": "dmg"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "NSIS"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "./build/notarize.js"
  },
  "license": "MIT"
}
