{
  "name": "tome",
  "version": "0.7.0",
  "description": "git integrated cross-platform markdown editor",
  "author": "Evin Owen <git@evinowen.net>",
  "scripts": {
    "build-electron": "./node_modules/.bin/electron-builder",
    "build-main": "./node_modules/.bin/cross-env-shell \"./node_modules/.bin/tsc -p src/main/tsconfig.json\"",
    "build-renderer": "./node_modules/.bin/vue-cli-service --dest dist/renderer build",
    "lint-main": "./node_modules/.bin/eslint spec/main/**/*.js src/main/**/*.ts",
    "lint-main-config": "./node_modules/.bin/eslint --print-config src/main/main.js",
    "lint-renderer": "./node_modules/.bin/vue-cli-service lint --no-fix src/renderer/**/*.vue src/renderer/**/*.ts spec/renderer/**/*.js",
    "pack-electron": "./node_modules/.bin/electron-builder --dir",
    "rebuild-electron": "./node_modules/.bin/electron-rebuild",
    "serve-main": "./node_modules/.bin/cross-env-shell NODE_ENV=development \"./node_modules/.bin/electron dist/main/main.js\"",
    "serve-main-framed": "./node_modules/.bin/cross-env-shell NODE_ENV=development FRAME_WINDOW=1 \"./node_modules/.bin/electron dist/main/main.js\"",
    "serve-renderer": "./node_modules/.bin/vue-cli-service serve",
    "test-main": "./node_modules/.bin/jest --config=spec/main/jest.config.js",
    "test-renderer": "./node_modules/.bin/cross-env-shell ./node_modules/.bin/vue-cli-service test:unit --config=spec/renderer/jest.config.js"
  },
  "main": "main.js",
  "dependencies": {
    "@fontsource/montserrat": "^4.5.13",
    "@mdi/font": "^6.9.96",
    "chokidar": "^3.5.3",
    "cli-truncate": "^2.1.0",
    "core-js": "^3.25.5",
    "cross-env": "^7.0.3",
    "electron-log": "^4.4.8",
    "is-text-path": "^2.0.0",
    "lodash": "^4.17.21",
    "luxon": "^2.5.0",
    "mark.js": "^8.11.1",
    "marked": "^4.1.1",
    "mime-types": "^2.1.35",
    "mustache": "^4.2.0",
    "node-forge": "^1.3.1",
    "nodegit": "^0.28.0-alpha.18",
    "tmp": "^0.2.1",
    "tmp-promise": "^3.0.3",
    "uuid": "^7.0.3",
    "vue": "^2.7.10",
    "vue-codemirror": "^4.0.6",
    "vue-shortkey": "^3.1.7",
    "vue-splitpane": "^1.0.6",
    "vue-template-compiler": "^2.7.10",
    "vuetify": "^2.6.11",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@types/electron": "^1.6.10",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.186",
    "@types/luxon": "^3.0.1",
    "@types/mime-types": "^2.1.1",
    "@types/mustache": "^4.2.1",
    "@types/node": "^18.8.4",
    "@types/node-forge": "^1.3.0",
    "@types/nodegit": "^0.27.10",
    "@types/util.promisify": "^1.0.4",
    "@types/uuid": "^8.3.4",
    "@types/vue-splitpane": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vue/cli-plugin-babel": "^4.5.19",
    "@vue/cli-plugin-eslint": "^4.5.19",
    "@vue/cli-plugin-typescript": "^4.5.19",
    "@vue/cli-plugin-unit-jest": "^4.5.19",
    "@vue/cli-service": "^4.5.19",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^1.3.0",
    "babel-eslint": "11.0.0-beta.2",
    "electron": "^18.3.15",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.2.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-unicorn": "^18.0.1",
    "eslint-plugin-vue": "^7.20.0",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "prettier": "^2.7.1",
    "resize-observer-polyfill": "^1.5.1",
    "sass": "^1.55.0",
    "sass-loader": "^8.0.2",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "build": {
    "appId": "com.evinowen.tome",
    "productName": "Tome",
    "artifactName": "Tome.Setup.${version}.${ext}",
    "npmRebuild": false,
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "files": [
      "!node_modules/nodegit/vendor",
      "dist/main",
      {
        "from": "dist/renderer",
        "to": "",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist/app"
    },
    "linux": {
      "icon": "build/icon.256.png",
      "target": "deb"
    },
    "mac": {
      "asarUnpack": "**/*.node",
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.plist",
      "entitlementsInherit": "build/entitlements.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "icon": "build/icon.512.png",
      "target": "dmg"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "NSIS"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "./build/notarize.js"
  },
  "license": "MIT"
}
